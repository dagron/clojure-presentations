@import url(s6/slides.css); /* required to make the slide show run at all */
     
html, body { color: black;
             font-family: Verdana, Geneva, Arial, Helvetica, sans-serif; }

a:link, a:visited { color: black; }

h1 { font-size: 30pt;  }
h2 { font-size: 28pt;  }
h3 { font-size: 25pt;  }
p, li, td, th { font-size: 18pt; }

pre { font-size: 16pt;  }

pre.code { 
  padding: 5px;
  border: silver thick groove;
}
     

table td { 
  padding: 0.5em;
}
table th { 
  color: #eeeeee;
}
div#header, div#footer {  color: silver; }

.ruby-concept { color: #ac0f0f;}
.clojure-concept { color: #3b5a96; }
.stricken { text-decoration: line-through; }
    
#currentSlide { color: silver;}

#controls #navLinks a { color: silver; }
